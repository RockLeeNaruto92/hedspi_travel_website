<div class="row">
  <div class="col-md-4 col-md-offset-4 login">
    <h1><center><%= I18n.t("admin.login.welcome") %></center></h1>

    <%= form_for(:session, url: admin_login_path) do |f| %>

        <%= f.email_field :email , class: "form-control", autofocus: true, placeholder: I18n.t("admin.login.username") %>
        <br>
        <%= f.password_field :password, class: "form-control", autofocus: true, placeholder: I18n.t("admin.login.password") %>
        <br>
        <%= f.submit I18n.t("admin.login.login"), class: "btn btn-primary col-md-12" %>
    <% end %>
  </div>
</div>
