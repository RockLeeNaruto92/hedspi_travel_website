<% content_for :content_head, t("admin.tours.index") %>

<div class="col-md-10">
  <%= link_to new_admin_tour_path, class: "btn btn-link" do %>
    <i class="glyphicon glyphicon-plus"></i>
    <%= t "admin.places.new" %>
  <% end %>
</div>
<div class="table-responsive col-md-12">
  <table class="table table-bordered table-hover table-striped">
    <thead>
      <tr>
        <th><%= t "admin.tours.code" %></th>
        <th class="text-center"><%= t "admin.tours.tickets" %></th>
        <th class="text-center"><%= t "admin.tours.available_tickets" %></th>
        <th class="text-center"><%= t "admin.tours.cost" %></th>
        <th class="text-center"><%= t "admin.tours.description" %></th>
      </tr>
    </thead>
    <tbody>
      <% @tours.each do |tour| %>
        <tr>
          <td class="col-sm-2"><%= link_to tour["code"], "#" %></td>
          <td class="col-sm-2"><%= truncate(raw strip_tags(tour["tickets"].to_s)) %></td>
          <td class="col-sm-2"><%= truncate(raw strip_tags(tour["available_tickets"].to_s)) %></td>
          <td class="col-sm-2"><%= truncate(raw strip_tags(tour["cost"].to_s)) %></td>
          <td class="col-sm-2 text-center">
            <%= link_to edit_admin_tour_path(tour["id"]) do %>
              <i class="glyphicon glyphicon-edit"></i>
            <% end %> |
            <%= link_to "#", data: {confirm: t("admin.tours.confirm")},
              method: :delete do %>
              <i class="glyphicon glyphicon-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
